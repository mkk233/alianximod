{
  "type": "minecraft:block",  // 类型：方块战利品表
  "pools": [  // 掉落池（可包含多个）
    {
      "bonus_rolls": 0.0,  // 时运附魔的额外掉落次数（0=无额外）
      "entries": [  // 掉落条目
        {
          "type": "minecraft:alternatives",  // 类型：条件选择器（多个选项选其一）
          "children": [  // 子选项
            {
              "type": "minecraft:item",  // 类型：掉落物品
              "conditions": [  // 触发条件
                {
                  "condition": "minecraft:match_tool",  // 工具匹配条件
                  "predicate": {
                    "enchantments": [  // 需要的附魔
                      {
                        "enchantment": "minecraft:silk_touch",  // 精准采集附魔
                        "levels": { "min": 1 }  // 至少1级
                      }
                    ]
                  }
                }
              ],
              "name": "xueximod:ars_ore"  // 掉落物：原矿石本身
            },
            {
              "type": "minecraft:item",  // 类型：掉落物品
              "functions": [  // 物品处理函数
                {
                  "add": false,  // 数量不叠加
                  "count": {  // 掉落数量控制
                    "type": "minecraft:uniform",  // 均匀分布
                    "max": 5.0,  // 最大数量
                    "min": 2.0   // 最小数量
                  },
                  "function": "minecraft:set_count"  // 设置数量函数
                },
                {
                  "enchantment": "minecraft:fortune",  // 受时运附魔影响
                  "formula": "minecraft:ore_drops",  // 使用矿石掉落公式
                  "function": "minecraft:apply_bonus"  // 应用附魔加成
                },
                {
                  "function": "minecraft:explosion_decay"  // 爆炸时可能不掉落
                }
              ],
              "name": "xueximod:shu_raw"  // 掉落物：原始材料
            }
          ]
        }
      ],
      "rolls": 1.0  // 基础掉落次数（固定1次）
    }
  ],
  "random_sequence": "xueximod:blocks/ars_ore"  // 随机种子标识
}
